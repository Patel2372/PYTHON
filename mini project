import pandas as pd

# Sample data: Student records
data = {
    "ID": [40, 36, 30],
    "Name": ["Jenil", "Het", "Ali"],
    "Age": [19, 20, 20],
    "Grade": ["C", "C", "C"]
}

# Create a DataFrame
df = pd.DataFrame(data)

# Function to display records
def display_records():
    print("\nStudent Records:")
    print(df)

# Function to add a new student
def add_student(student_id, name, age, grade):
    global df
    new_student = pd.DataFrame({"ID": [student_id], "Name": [name], "Age": [age], "Grade": [grade]})
    df = pd.concat([df, new_student], ignore_index=True)
    print(f"\nâœ… Student {name} added successfully!")

# Function to save to CSV
def save_to_csv(filename="students.csv"):
    df.to_csv(filename, index=False)
    print(f"\nðŸ’¾ Data saved to {filename}")

# Function to load from CSV
def load_from_csv(filename="students.csv"):
    global df
    df = pd.read_csv(filename)
    print("\nðŸ“‚ Data loaded successfully!")

# Test the functions
display_records()
add_student(36, "krish", 20, "B")  # Adding a new student
display_records()
save_to_csv()  # Save data to CSV
load_from_csv()  # Reload data

